                    >
                        <Text text="Estesa" />
                    </Column>
                    <Column hAlign="End" width="12em">
                        <Text text="UoM" />
                    </Column>
                    </columns>
                    
                    <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Input value="{lagpModel>StartPoint}" ></Input>
                            <Input value="{lagpModel>EndPoint}"></Input>
